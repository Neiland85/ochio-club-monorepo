{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/*"],
      "@backend/*": ["../../backend/src/*"],
      "@frontend/*": ["../../frontend/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
