{
  "name": "ochio-club-monorepo",
  "version": "1.0.0",
  "description": "Monorepo para el proyecto Ochio Club",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm start --prefix frontend\"",
    "build": "npm run build --prefix backend && npm run build --prefix frontend",
    "start": "npm start --prefix backend",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "concurrently": "^7.0.0",
    "postcss": "^8.5.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@types/body-parser": "^1.19.6",
    "@types/range-parser": "^1.2.7",
    "braces": "^3.0.3",
    "eslint": "^9.29.0",
    "glob": "^11.0.3",
    "jest": "^30.0.2",
    "micromatch": "^4.0.8",
    "next": "^15.2.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0"
  }
}
